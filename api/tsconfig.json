{
 "compilerOptions": {
   "target": "esnext",
   "lib": [
     "dom",
     "dom.iterable",
     "esnext"
   ],
   "allowJs": true,
   "skipLibCheck": true,
   "allowSyntheticDefaultImports": true,
   "strict": true,
   "forceConsistentCasingInFileNames": true,
   "noFallthroughCasesInSwitch": true,
   "module": "node18",
   "outDir": "dist",
   "rootDir": "src",
   "moduleResolution": "node16",
   "experimentalDecorators": true,
   "emitDecoratorMetadata": true
 },
 "include": [
   "src/**/*"
 ],
 "exclude": [
   "node_modules"
 ]
}