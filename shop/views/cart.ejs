<% layout('layout') %>
<h2>장바구니</h2>
<% if (cart.length > 0) { %>
    <table class="cart-table">
        <thead>
            <tr>
                <th>상품명</th>
                <th>가격</th>
                <th>수량</th>
                <th>삭제</th>
            </tr>
        </thead>
        <tbody>
        <% cart.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.price %>원</td>
                    <td><%= item.quantity %></td>
                    <td>
                        <form action="/cart/remove" method="POST" style="display:inline;">
                            <input type="hidden" name="productId" value="<%= item.id %>" />
                            <button type="submit">삭제</button>
                        </form>
                    </td>
                </tr>
        <% }) %>
        </tbody>
    </table>
    <p>총합계: <%= totalPrice %>원</p>
    <button onclick="location.href='/checkout'">결제하기</button>
<% } else { %>
    <p>장바구니가 비어 있습니다.</p>
<% } %>
